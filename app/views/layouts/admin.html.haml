!!!
%html
  %head
    %title Dimensions
    %meta{:name=> "keywords", :content=> "template language"}
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'jquery-ui-1.8.16.custom.css'
    = stylesheet_link_tag 'dimensions_admin', 'admin'
    = stylesheet_link_tag 'dimensions.css'

    = javascript_include_tag "jquery.min.js"
    = javascript_include_tag "jquery-ui.min.js"
    = javascript_include_tag "jquery_ujs.js"
    = javascript_include_tag "active_admin.js"
    = javascript_include_tag "admin.js"
    = javascript_include_tag "jquery.moreless.min"
    = javascript_include_tag "flash_messages"
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
    = javascript_include_tag "underscore-min"
    = javascript_include_tag "news_feeds/tags"
    = javascript_include_tag "news_feeds/modal_tag_confirm"
    = javascript_include_tag "bootstrap-modal"
    
    = csrf_meta_tag

  %body.index.admin_dashboard.logged_in.admin_namespace
    = render 'layouts/admin_top_nav' if admin_user_signed_in?
    #active_admin_content
      #main_content_wrapper(class='#{(params[:action]=="edit" || params[:action]=="new" || params[:action]=="create" || params[:action]=="update" ) ? "" : "with_sidebar"}')
        #main_content
          .blank_slate_container#dashboard_default_message
            .admin_page
              = yield
      #sidebar.sidebar_section.panel
        = yield :sidebar
    #footer
