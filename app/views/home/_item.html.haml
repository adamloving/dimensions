%script#item-template{:type=>"text/x-jquery-tmpl"}
  {{each(i,item) items}}
  .item
    .post-it
      ${console.log(items)}
      {{html img}}
    .body
      %h3.headline.unread ${text}
      .article-details
        {{if photo_url}}
        %img{:src=>'${photo_url}',:class=>"show"}
        {{/if}}

        .text
          {{html text}}
        %a{:href=>'${article_link}'} ${article_link}
        .date ${created_at}

        .fb-like{"data-href"=>"${article_link}", "data-send"=>"true", "data-width"=>"450", "data-show-faces"=>"true"}
  {{/each}}        
