%table
  %tbody
    %tr
      %td
        Name
      %td
        = @feed_entry.name
    %tr
      %td
        Url
      %td
        = @feed_entry.url
    %tr
      %td
        Visibility
      %td
        = @feed_entry.visible? ? "Showing" : "Hidden"
    %tr
      %td
        Published At:
      %td
        = @feed_entry.published_at
    %tr
      %td
        Author
      %td
        = @feed_entry.author
    %tr
      %td
        Summary
      %td
        = @feed_entry.summary
    %tr
      %td
        Content
      %td
        = @feed_entry.content

= entry_toggle_visibility_link(@feed_entry)
