= content_for :sidebar do
  %h3
    FeedEntry
  #panel_contents
    %h4
      State
    %p
      = @feed_entry.state
    %h4
      Visibility
    %p
      = @feed_entry.visible? ? "Showing" : "Hidden"
    %p
    - if @feed_entry.downloaded?
      = link_to "Process", fetch_content_admin_news_feed_feed_entry_path(@feed_entry.feed, @feed_entry), :method => :post, :class=>"button_link process-entry", :style=>"float:left;", 'data-entry-id' => @feed_entry.id
    - elsif @feed_entry.fetched?
      = link_to "Localize", process_entry_admin_news_feed_feed_entry_path(@feed_entry.feed, @feed_entry, :current => @feed_entry.state.to_sym), :method => :post, :class => "button_link"
    %p
      = entry_toggle_visibility_link(@feed_entry,{:class=>"button_link"}) 

%table
  %tbody
    %tr
      %td
        Name
      %td
        = @feed_entry.name
    %tr
      %td
        Url
      %td
        = @feed_entry.url
    %tr
      %td
        Published At:
      %td
        = @feed_entry.published_at
    %tr
      %td
        Author
      %td
        = @feed_entry.author
    %tr
      %td
        Summary
      %td
        = @feed_entry.summary
    %tr
      %td
        Content
      %td
        .more-less
          .text-block
            %p
              = @feed_entry.content

    - if @feed_entry.localized? && @feed_entry.entities.locations.first.present?
      %tr
        %td
          City
        %td
          = @feed_entry.entities.locations.first.serialized_data["shortname"]
      %tr
        %td
          Country
        %td
          = @feed_entry.entities.locations.first.serialized_data["containedbycountry"]
      %tr
        %td
          Latitude
        %td
          = @feed_entry.entities.locations.first.serialized_data["latitude"]
      %tr
        %td
          Longitude
        %td
          = @feed_entry.entities.locations.first.serialized_data["longitude"]


.ajax_loading

= javascript_include_tag "feed_entries/show.onready.js"

